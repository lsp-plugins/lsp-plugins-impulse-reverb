<plugin resizable="true">
	<grid rows="4" cols="3" vspacing="4" hspacing="0">
		<!-- IR editor -->
		<cell>
			<align halign="-1" hfill="true" vreduce="true">
				<hbox pad.l="6" pad.r="6" pad.t="4" pad.b="4" spacing="4" fill="false" bg.color="bg_schema">
					<label text="labels.fft.frame"/>
					<combo id="fft" pad.r="10"/>
					<!-- <label text="labels.file" /> -->
					<combo id="fsel"/>
					<button id="wpp" pad.l="10" ui:inject="Button_green" text="labels.ir_equalizer" size="16"/>
					<button id="eqv" ui:inject="Button_yellow" text="labels.flt.show_" size="16"/>
				</hbox>
			</align>
		</cell>

		<cell rows="3"><void bg.color="bg" width="4" hreduce="true"/></cell>

		<cell rows="3">
			<group text="groups.output" ipadding="0">
				<grid rows="15" cols="1" expand="true" fill="true">
					<ui:with pad.h="6" pad.v="4" vreduce="true">
						<label text="labels.signal.dry_pan"/>
					</ui:with>
					<ui:with pad.h="6" pad.v="4">
						<knob id="p" pad.t="4" pad.b="4" scolor="mono"/>
						<value id="p" sline="true"/>
					</ui:with>

					<hsep bg.color="bg" pad.v="2" vreduce="true"/>

					<label text="labels.predelay" pad.h="6" pad.v="4" vreduce="true"/>
					<knob id="pd" pad.v="4"/>
					<value id="pd" sline="true" pad.b="4"/>

					<hsep bg.color="bg" pad.v="2" vreduce="true"/>

					<label text="labels.signal.dry" pad.h="6" pad.v="4" vreduce="true"/>
					<knob id="dry" scolor="dry" pad.v="4"/>
					<value id="dry" sline="true" pad.b="4"/>

					<hsep bg.color="bg" pad.v="2" vreduce="true"/>

					<vbox height.min="105">
						<label text="labels.signal.wet" pad.h="6" pad.v="4" vreduce="true"/>
						<knob id="wet" scolor="wet"/>
						<value id="wet" sline="true" pad.b="4"/>
					</vbox>

					<hsep bg.color="bg" pad.v="2" vreduce="true"/>

					<vbox height.min="105">
						<label text="labels.output" pad.h="6" pad.v="4" vreduce="true"/>
						<knob id="g_out"/>
						<value id="g_out" sline="true"/>
					</vbox>

				</grid>
			</group>
		</cell>

		<group text="groups.impulse_response" expand="true" bg.color="bg" spacing="0" ipadding="0">
			<vbox>
				<!-- File editor -->

				<ui:for id="i" first="0" last="3">
					<asample
						expand="true"
						id="ifn${i}"
						mesh_id="ifd${i}"
						path_id="_ui_dlg_ir_path"
						hcut=":ihc${i}"
						tcut=":itc${i}"
						fadein=":ifi${i}"
						fadeout=":ifo${i}"
						length=":ifl${i}"
						status=":ifs${i}"
						width.min="600"
						height.min="128"
						load.preview="true"
						clipboard.head_cut="ihc${i}"
						clipboard.tail_cut="itc${i}"
						clipboard.fade_in="ifi${i}"
						clipboard.fade_out="ifo${i}"
						format="audio_lspc,audio,all"
						visibility=":fsel ieq ${i}"/>
				</ui:for>
				<void bg.color="bg" pad.v="2" vreduce="true"/>

				<ui:for id="i" first="0" last="3">
					<grid rows="4" cols="6" bg.color="bg_schema" visibility=":fsel ieq ${i}">
						<ui:with pad.h="6" pad.v="4" vreduce="true">
							<label text="labels.sedit.reverse"/>
							<label text="labels.sedit.head_cut"/>
							<label text="labels.sedit.tail_cut"/>
							<label text="labels.sedit.fade_in"/>
							<label text="labels.sedit.fade_out"/>
							<label text="labels.listen"/>
						</ui:with>

						<cell cols="6"><hsep bg.color="bg" pad.v="2" vreduce="true"/></cell>

						<ui:with pad.h="6" pad.v="4">
							<cell rows="2"><button id="irv${i}" size="32" toggle="false"/></cell>
							<knob id="ihc${i}" size="20"/>
							<knob id="itc${i}" size="20"/>
							<knob id="ifi${i}" size="20" scolor="fade_in"/>
							<knob id="ifo${i}" size="20" scolor="fade_out"/>
							<cell rows="2"><button id="ils${i}" size="32" toggle="false"/></cell>
						</ui:with>

						<ui:with pad.h="6" pad.b="4" width.min="48" sline="true">
							<value id="ihc${i}"/>
							<value id="itc${i}"/>
							<value id="ifi${i}"/>
							<value id="ifo${i}"/>
						</ui:with>
					</grid>
				</ui:for>
			</vbox>
		</group>

		<group text="groups.processors" ipadding="0">

			<grid rows="7" cols="17" expand="true">
				<!-- r1 -->
				<ui:with pad.h="6" pad.v="4" vreduce="true">
					<label text="labels.specials.num"/>
					<cell rows="7"><vsep bg.color="bg" pad.v="6" pad.h="2" hreduce="true"/></cell>
					<label text="labels.predelay"/>
					<cell rows="7"><vsep bg.color="bg" pad.v="0" pad.h="2" hreduce="true"/></cell>
					<cell cols="2"><label text="labels.source"/></cell>
					<cell rows="7"><vsep bg.color="bg" pad.v="0" pad.h="2" hreduce="true"/></cell>
					<label text="labels.makeup"/>

					<cell rows="7"><vsep bg.color="bg" pad.v="0" pad.h="2" hreduce="true"/></cell>

					<label text="labels.specials.num"/>
					<cell rows="7"><vsep bg.color="bg" pad.v="0" pad.h="2" hreduce="true"/></cell>
					<label text="labels.predelay"/>
					<cell rows="7"><vsep bg.color="bg" pad.v="0" pad.h="2" hreduce="true"/></cell>
					<cell cols="2"><label text="labels.source"/></cell>
					<cell rows="7"><vsep bg.color="bg" pad.v="0" pad.h="2" hreduce="true"/></cell>
					<label text="labels.makeup"/>
				</ui:with>

				<!-- r3 -->
				<ui:for id="i" first="0" last="1">
					<!-- r2 r5 -->
					<ui:with bg.color="bg" pad.v="2" vreduce="true">
						<hsep/>
						<hsep/>
						<cell cols="2"><hsep/></cell>
						<hsep/>
						<hsep/>
						<hsep/>
						<cell cols="2"><hsep/></cell>
						<hsep/>
					</ui:with>

					<!-- r3 r6 -->
					<ui:with pad.h="6" pad.v="4">
						<label text="labels.specials.idx" text:id="${i}" vreduce="true"/>
						<knob id="pd${i}" size="20"/>
						<cell cols="2" pad="0">
							<vbox spacing="2" pad="0">
								<combo id="csf${i}" fill="true" pad.t="4" pad.b="0"/>
								<combo id="cst${i}" fill="true"/>
							</vbox>
						</cell>
						<knob id="mk${i}" size="20"/>

						<label text="labels.specials.idx" text:id="${:i+2}" vreduce="true"/>
						<knob id="pd${:i+2}" size="20"/>
						<cell cols="2" pad="0">
							<vbox spacing="2" pad="0">
								<combo id="csf${:i+2}" fill="true" pad.t="4" pad.b="0"/>
								<combo id="cst${:i+2}" fill="true"/>
							</vbox>
						</cell>
						<knob id="mk${:i+2}" size="20"/>
					</ui:with>

					<!-- r4 r7 -->
					<ui:with pad.h="6" pad.b="4">
						<label/>
						<value id="pd${i}" width.min="48" sline="true"/>
						<button id="cam${:i}" text="labels.chan.mute" size="10" ui:inject="Button_red_8" width.min="45"/>
						<hbox fill="false" pad.l="0" pad.r="6" spacing="4"><led id="ca${i}" size="10" pad="0"/>
							<label text="labels.active" pad="0"/>
						</hbox>
						<value id="mk${i}" width.min="48" sline="true"/>

						<label/>
						<value id="pd${:i+2}" width.min="48" sline="true"/>
						<button id="cam${:i+2}" text="labels.chan.mute" size="10" ui:inject="Button_red_8" width.min="45"/>
						<hbox fill="false" pad.l="0" pad.r="6" spacing="4"><led id="ca${:i+2}" size="10" pad="0"/>
							<label text="labels.active" pad="0"/>
						</hbox>
						<value id="mk${:i+2}" width.min="48" sline="true"/>
					</ui:with>
				</ui:for>
			</grid>

		</group>

		<!-- Wet equalization -->
		<cell cols="3">
			<group text="groups.wet_signal_eq" visibility=":eqv" ipadding="0">
				<grid rows="5" cols="12">

					<label text="labels.flt.low_cut" pad.h="6" pad.v="4" bright="(:wpp) ? 1 : 0.5" bg.bright="(:wpp) ? 1 : :const_bg_darken"/>
					<cell rows="5"><vsep bg.color="bg" pad.h="2" hreduce="true"/></cell>
					<ui:with pad.h="6" pad.v="4" bright="(:wpp) ? 1 : 0.5" bg.bright="(:wpp) ? 1 : :const_bg_darken">
						<label text="50"/>
						<label text="107"/>
						<label text="227"/>
						<label text="484"/>
						<label text="labels.flt.1k"/>
						<label text="labels.flt.2_2k"/>
						<label text="labels.flt.4_7k"/>
						<label text="labels.flt.10k"/>
					</ui:with>
					<cell rows="5">
						<vsep bg.color="bg" pad.h="2" hreduce="true"/>
					</cell>
					<ui:with pad.h="6" pad.v="4" bright="(:wpp) ? 1 : 0.5" bg.bright="(:wpp) ? 1 : :const_bg_darken">
						<label text="labels.flt.high_cut"/>

						<combo id="lcm" fill="false"/>
						<ui:for id="f" first="0" last="7">
							<cell rows="3">
								<fader id="eq_${f}" angle="1" scolor="(:wpp) ? 'fader' : 'fader_inactive'"/>
							</cell>
						</ui:for>
						<combo id="hcm" fill="false"/>

						<label text="labels.frequency"/>
						<label text="labels.frequency"/>

						<knob id="lcf" scolor="(:wpp) ? 'kscale' : 'kscale_inactive'"/>
						<knob id="hcf" scolor="(:wpp) ? 'kscale' : 'kscale_inactive'"/>

						<value id="lcf"/>
						<ui:for id="f" first="0" last="7">
							<value width.min="32" id="eq_${f}" bright="(:wpp) ? 1 : 0.5"/>
						</ui:for>
						<value id="hcf"/>
					</ui:with>
				</grid>
			</group>
		</cell>
	</grid>
</plugin>
